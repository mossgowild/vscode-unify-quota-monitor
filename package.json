{
  "publisher": "mossgowild",
  "name": "unify-quota-monitor",
  "displayName": "Unify Quota Monitor",
  "description": "Monitor provider usage quotas in a beautiful panel view. Supports OpenAI, Google Antigravity, GitHub Copilot, Gemini CLI, Zhipu AI, and Z.ai.",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor/issues"
  },
  "homepage": "https://github.com/mossgowild/vscode-unify-quota-monitor#readme",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "engines": {
    "vscode": "^1.99.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Unify Quota Monitor",
      "properties": {
        "unifyQuotaMonitor.providers": {
          "type": "array",
          "default": [],
          "markdownDescription": "Configured provider accounts. Use the **Manage Accounts** command to add, edit, or remove accounts interactively.",
          "items": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string",
                "markdownDescription": "Provider type: `openai` (OpenAI), `google-antigravity` (Google Antigravity), `github-copilot` (GitHub Copilot), `gemini-cli` (Gemini CLI), `zhipu` (Zhipu AI), `zai` (Z.ai)",
                "enum": [
                  "openai",
                  "google-antigravity",
                  "github-copilot",
                  "gemini-cli",
                  "zhipu",
                  "zai"
                ],
                "enumDescriptions": [
                  "OpenAI",
                  "Google Antigravity",
                  "GitHub Copilot",
                  "Gemini CLI",
                  "Zhipu AI (智谱 AI)",
                  "Z.ai"
                ]
              },
              "name": {
                "type": "string",
                "markdownDescription": "Optional alias for this provider group."
              },
              "accounts": {
                "type": "array",
                "markdownDescription": "List of accounts for this provider.",
                "items": {
                  "type": "object",
                  "properties": {
                    "credential": {
                      "type": "string",
                      "markdownDescription": "Authentication credentials. OAuth tokens for OpenAI/Google/Gemini CLI/GitHub, or API keys for Zhipu AI/Z.ai"
                    },
                    "name": {
                      "type": "string",
                      "markdownDescription": "Display name for this account (shown in the quota panel)"
                    }
                  },
                  "required": [
                    "credential"
                  ]
                }
              }
            },
            "required": [
              "provider",
              "accounts"
            ]
          }
        },
        "unifyQuotaMonitor.autoRefresh": {
          "type": "object",
          "default": {
            "enabled": true,
            "intervalMs": 180000
          },
          "markdownDescription": "Automatic refresh settings for keeping quota data up-to-date",
          "properties": {
            "enabled": {
              "type": "boolean",
              "markdownDescription": "Automatically refresh quota data at the specified interval"
            },
            "intervalMs": {
              "type": "number",
              "markdownDescription": "Refresh interval in milliseconds. Default: 180000 (3 minutes). Minimum recommended: 60000 (1 minute)"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "unifyQuotaMonitor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "unifyQuotaMonitor.settings",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "unifyQuotaMonitor-sidebar",
          "title": "Quota",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "unifyQuotaMonitor-sidebar": [
        {
          "type": "webview",
          "id": "unifyQuotaMonitor.usageView",
          "name": "Quota",
          "icon": "$(dashboard)",
          "contextualTitle": "Quota"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "unifyQuotaMonitor.refresh",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation@1"
        },
        {
          "command": "unifyQuotaMonitor.settings",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "reactive-vscode": "^1.0.0-beta.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
