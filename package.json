{
  "publisher": "mossgowild",
  "name": "unify-quota-monitor",
  "displayName": "%displayName%",
  "description": "%description%",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor/issues"
  },
  "homepage": "https://github.com/mossgowild/vscode-unify-quota-monitor#readme",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "l10n": "./l10n",
  "engines": {
    "vscode": "^1.99.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "unifyQuotaMonitor.accounts": {
          "type": "array",
          "default": [],
          "markdownDescription": "%configuration.accounts.markdownDescription%",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "markdownDescription": "%configuration.accounts.id.markdownDescription%"
              },
              "providerId": {
                "type": "string",
                "markdownDescription": "%configuration.accounts.providerId.markdownDescription%"
              },
              "alias": {
                "type": "string",
                "markdownDescription": "%configuration.accounts.alias.markdownDescription%"
              },
              "credential": {
                "type": "string",
                "markdownDescription": "%configuration.accounts.credential.markdownDescription%"
              }
            },
            "required": [
              "id",
              "providerId",
              "credential"
            ]
          }
        },
        "unifyQuotaMonitor.autoRefresh": {
          "type": "object",
          "default": {
            "enabled": true,
            "intervalMs": 180000
          },
          "markdownDescription": "%configuration.autoRefresh.markdownDescription%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "markdownDescription": "%configuration.autoRefresh.enabled.markdownDescription%"
            },
            "intervalMs": {
              "type": "number",
              "markdownDescription": "%configuration.autoRefresh.intervalMs.markdownDescription%"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "unifyQuotaMonitor.manageAccounts",
        "title": "%command.manageAccounts.title%",
        "icon": "$(plus)"
      },
      {
        "command": "unifyQuotaMonitor.refresh",
        "title": "%command.refresh.title%",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "unifyQuotaMonitor-sidebar",
          "title": "%viewsContainers.activitybar.title%",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "unifyQuotaMonitor-sidebar": [
        {
          "type": "webview",
          "id": "unifyQuotaMonitor.usageView",
          "name": "%views.usageView.name%",
          "icon": "$(dashboard)",
          "contextualTitle": "%views.usageView.contextualTitle%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "unifyQuotaMonitor.refresh",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation"
        },
        {
          "command": "unifyQuotaMonitor.manageAccounts",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown --env.NODE_ENV production",
    "dev": "tsdown --watch ./src --env.NODE_ENV development",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "reactive-vscode": "^1.0.0-beta.2",
    "tsdown": "^0.15.11",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
