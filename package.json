{
  "publisher": "mossgowild",
  "name": "unify-quota-monitor",
  "displayName": "%displayName%",
  "description": "%description%",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/mossgowild/vscode-unify-quota-monitor/issues"
  },
  "homepage": "https://github.com/mossgowild/vscode-unify-quota-monitor#readme",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.cjs",
  "l10n": "./l10n",
  "engines": {
    "vscode": "^1.99.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "unifyQuotaMonitor.providers": {
          "type": "array",
          "default": [],
          "markdownDescription": "%configuration.providers.markdownDescription%",
          "items": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string",
                "markdownDescription": "%configuration.providers.provider.markdownDescription%",
                "enum": [
                  "openai",
                  "google-antigravity",
                  "github-copilot",
                  "gemini-cli",
                  "zhipu",
                  "zai"
                ],
                "enumDescriptions": [
                  "OpenAI",
                  "Google Antigravity",
                  "GitHub Copilot",
                  "Gemini CLI",
                  "Zhipu AI (智谱 AI)",
                  "Z.ai"
                ]
              },
              "name": {
                "type": "string",
                "markdownDescription": "%configuration.providers.name.markdownDescription%"
              },
              "accounts": {
                "type": "array",
                "markdownDescription": "%configuration.providers.accounts.markdownDescription%",
                "items": {
                  "type": "object",
                  "properties": {
                    "credential": {
                      "type": "string",
                      "markdownDescription": "%configuration.providers.accounts.credential.markdownDescription%"
                    },
                    "name": {
                      "type": "string",
                      "markdownDescription": "%configuration.providers.accounts.name.markdownDescription%"
                    }
                  },
                  "required": [
                    "credential"
                  ]
                }
              }
            },
            "required": [
              "provider",
              "accounts"
            ]
          }
        },
        "unifyQuotaMonitor.autoRefresh": {
          "type": "object",
          "default": {
            "enabled": true,
            "intervalMs": 180000
          },
          "markdownDescription": "%configuration.autoRefresh.markdownDescription%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "markdownDescription": "%configuration.autoRefresh.enabled.markdownDescription%"
            },
            "intervalMs": {
              "type": "number",
              "markdownDescription": "%configuration.autoRefresh.intervalMs.markdownDescription%"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "unifyQuotaMonitor.refresh",
        "title": "%command.refresh.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "unifyQuotaMonitor.settings",
        "title": "%command.settings.title%",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "unifyQuotaMonitor-sidebar",
          "title": "%viewsContainers.activitybar.title%",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "unifyQuotaMonitor-sidebar": [
        {
          "type": "webview",
          "id": "unifyQuotaMonitor.usageView",
          "name": "%views.usageView.name%",
          "icon": "$(dashboard)",
          "contextualTitle": "%views.usageView.contextualTitle%"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "unifyQuotaMonitor.refresh",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation@1"
        },
        {
          "command": "unifyQuotaMonitor.settings",
          "when": "view == unifyQuotaMonitor.usageView",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "reactive-vscode": "^1.0.0-beta.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
